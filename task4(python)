import numpy as np

# Генерация случайных параметров гиперболического цилиндра, плоскости, прямой и координат точки
a = np.random.randint(1, 10)  # Параметр а
b = np.random.randint(1, 10)  # Параметр b
c = np.random.randint(1, 10)  # Параметр c
d = np.random.randint(1, 10)  # Параметр d
x_point = np.random.randint(-10, 10)  # x-координата точки
y_point = np.random.randint(-10, 10)  # y-координата точки
z_point = np.random.randint(-10, 10)  # z-координата точки
x_plane = np.random.randint(-10, 10)  # Координата x на плоскости
y_plane = np.random.randint(-10, 10)  # Координата y на плоскости
z_plane = np.random.randint(-10, 10)  # Координата z на плоскости
x_line = np.random.randint(-10, 10)  # Координата x на прямой
y_line = np.random.randint(-10, 10)  # Координата y на прямой
z_line = np.random.randint(-10, 10)  # Координата z на прямой

# Вывод уравнения гиперболического цилиндра
print("Уравнение гиперболического цилиндра:", f"x^2 / {a**2} - y^2 / {b**2} = z / {c**2}")

# Вывод уравнения плоскости
print("Уравнение плоскости:", f"{x_plane}x + {y_plane}y + {z_plane}z = {d}")

# Вывод уравнения прямой
print("Уравнение прямой:", f"x = {x_line}, y = {y_line}, z = {z_line}")

# Вывод координат точки
print("Координаты точки в пространстве:", f"({x_point}, {y_point}, {z_point})")

# Проверка, пересекает ли плоскость гиперболический цилиндр
if x_plane**2 / a**2 - y_plane**2 / b**2 == z_plane / c**2:
    print("Плоскость пересекает гиперболический цилиндр.")
else:
    print("Плоскость не пересекает гиперболический цилиндр.")

# Проверка, принадлежит ли прямая гиперболическому цилиндру
if x_line**2 / a**2 - y_line**2 / b**2 == z_line / c**2:
    print("Прямая принадлежит гиперболическому цилиндру.")
else:
    print("Прямая не принадлежит гиперболическому цилиндру.")

# Проверка, принадлежит ли заданная точка гиперболическому цилиндру
if x_point**2 / a**2 - y_point**2 / b**2 == z_point / c**2:
    print("Точка принадлежит гиперболическому цилиндру.")
else:
    print("Точка не принадлежит гиперболическому цилиндру.")
