import numpy as np

# Генерация случайных параметров гиперболы и координат точки
a = np.random.randint(1, 10)  # Параметр а
b = np.random.randint(1, 10)  # Параметр b
x = np.random.randint(-10, 10)  # x-координата точки
y = np.random.randint(-10, 10)  # y-координата точки

# Вывод уравнения гиперболы
print("Уравнение гиперболы:", f"x^2 / {a**2} - y^2 / {b**2} = 1")

# Вывод координат точки
print("Координаты точки на плоскости:", f"({x}, {y})")

# Проверка, принадлежит ли точка гиперболе
if x**2 / a**2 - y**2 / b**2 == 1:
    print("Точка лежит на гиперболе.")
else:
    print("Точка не лежит на гиперболе.")

# Нахождение координат фокусов гиперболы
c = np.sqrt(a**2 + b**2)
f1 = (-c, 0)
f2 = (c, 0)
print("Координаты фокусов:", f1, f2)

# Нахождение длин действительной и мнимой полуосей
a_len = abs(a)
b_len = abs(b)
print("Длина действительной полуоси:", a_len)
print("Длина мнимой полуоси:", b_len)

# Нахождение эксцентриситета гиперболы
e = c / a
print("Эксцентриситет гиперболы:", e)

# Нахождение расстояния между директрисами гиперболы
direct_dist = 2 * abs(a) * np.sqrt(e**2 - 1)
print("Расстояние между директрисами:", direct_dist)
